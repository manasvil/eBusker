<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Thank you!"
        android:id="@+id/thanksText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:id="@+id/blueCoin"
        android:background="@drawable/coinblue"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="250dp" />

    <ImageView
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:id="@+id/greenCoin"
        android:background="@drawable/coingreen"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="235dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:id="@+id/profilePic"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/whiteprofilepic"
            android:maxHeight="@android:dimen/thumbnail_height"
            android:maxWidth="@android:dimen/thumbnail_width"
            android:minHeight="@android:dimen/thumbnail_height"
            android:minWidth="@android:dimen/thumbnail_width" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Beggory Bappery"
            android:id="@+id/profileName"
            android:layout_gravity="center_horizontal"
            android:autoText="false" />

        <EditText
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/enterTip"
            android:layout_gravity="center_horizontal"
            android:editable="true"
            android:text="$0.00"
            android:nestedScrollingEnabled="true"
            android:background="@drawable/coin"
            android:textAlignment="center"
            android:selectAllOnFocus="true"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:id="@+id/arrow"
            android:background="@drawable/arrowflipped"
            android:layout_marginLeft="200dp" />

        <Button
            android:layout_width="106dp"
            android:layout_height="100dp"
            android:text="Tip!"
            android:id="@+id/tipButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/whitetipjar"
            android:layout_margin="10dp"
            android:onClick="giveTip" />

    </LinearLayout>

</FrameLayout>
